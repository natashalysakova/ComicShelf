@page "/"
@model ComicShelf.Pages.Volumes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-page="Create">Create New</a>
</p>

<h5>Announces and preorders</h5>
<div class="shelf">
    @foreach (var item in Model.AnnouncedAndPreordered)
    {
        <div class="book" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.Id">

            @if(item.PurchaseStatus == Models.Enums.PurchaseStatus.Announced)
            {
                <span class="position-absolute top-100 start-50 translate-middle p-2 bg-info border border-light rounded-circle"></span>

            }
            else
            {
                <span class="position-absolute top-100 start-50 translate-middle p-2 bg-success border border-light rounded-circle"></span>

            }

            <div class="book-number">@item.Number</div>
            <div class="book-title">@item.Series.Name</div>
        </div>
    }
</div>

<h5>Shelf</h5>
<div class="shelf">
    @foreach (var item in Model.Purchased)
    {
        <div class="book" data-bs-toggle="modal" data-bs-target="#exampleModal" data-id="@item.Id">
            <div class="book-number">@item.Number</div>
            <div class="book-title">@item.Series.Name</div>
        </div>
    }
</div>


