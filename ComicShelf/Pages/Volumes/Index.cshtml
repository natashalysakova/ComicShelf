@section Scripts {
    <script>
        $(function () {
            $('.book').on('click', function () {
                console.log("clicked");
                var id = $(this).data('id');
                $.ajax({
                    url: "?handler=Volume",
                    type: 'GET',
                    cache: false,
                    data: { id: id }
                }).done(function (result) {
                    $('.modal-content').html(result);
                });

            });
        })
    </script>
}