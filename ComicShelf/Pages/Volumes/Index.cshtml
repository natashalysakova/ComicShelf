                    }
                    <p class="card-text">
                        Volume #
                        <span class="badge text-bg-info">@item.Number</span>
                    </p>

                </div>

                @if (item.Cover != null)
                {
                    <img src="src=" data:image;base64,@System.Convert.ToBase64String(item.Cover.Cover)"" class="card-img-top" />
