@using ComicShelf.Localization;
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IHtmlLocalizer<SharedResource> Localizer

@model ComicShelf.Pages.Volumes.IndexModel

<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <form method="post" asp-page-handler="Add" data-ajax-method="post" data-ajax="true" enctype="multipart/form-data" data-ajax-complete="createComplete">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">@Localizer["AddNewVolume"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                <div class="alert alert-danger" role="alert" style="display: none;" id="createAlert">
                    
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3 row">
                    <label asp-for="NewVolume.Series" class="col-sm-2 col-form-label">@Localizer["Series"]</label>
                    <div class="col-sm-10">
                        <input asp-for="NewVolume.Series" class="form-control" list="datalistOptions" placeholder="@Localizer["TypeForSearch"]" autocomplete="off" />
                        <datalist id="datalistOptions">
                            @foreach (var item in Model.Series)
                            {
                                <option value="@item.Text">@item.Text</option>
                            }
                        </datalist>
                    </div>
                    <span asp-validation-for="NewVolume.Series" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="NewVolume.Authors" class="col-sm-2 col-form-label">@Localizer["Authors"]</label>
                    <div class="col-sm-10">
                        <input asp-for="NewVolume.Authors" class="form-control multple-datalist" multiple list="autorsOptions" placeholder="@Localizer["TypeForSearch"]" autocomplete="off" />
                        <datalist id="autorsOptions">
                            @foreach (var item in Model.Authors)
                            {
                                <option data-value="@item.Value">@item.Text</option>
                            }
                        </datalist>
                    </div>
                    <span asp-validation-for="NewVolume.Authors" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-4">
                        <div class="row mb-3">
                            <label asp-for="NewVolume.Number" class="col-sm-6 col-form-label">@Localizer["NumberInSeries"]</label>

                            <div class="col-sm-6">
                                <input asp-for="NewVolume.Number" class="form-control" min="0" onchange="updateTitle('@Localizer["Volume"]')" />
                            </div>
                            <span asp-validation-for="NewVolume.Number" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-8">
                        <div class="row mb-3">
                            <label asp-for="NewVolume.Title" class="col-sm-2 col-form-label">@Localizer["Title"]</label>
                            <div class="col-sm-10">
                                <input asp-for="NewVolume.Title" class="form-control"/>
                            </div>
                            <span asp-validation-for="NewVolume.Title" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-6">
                        <div class="row mb-3">
                            <label asp-for="NewVolume.PurchaseStatus" class="col-sm-4 col-form-label">@Localizer["PurchaseStatus"]</label>
                            <div class="col-sm-8">
                                <select asp-for="NewVolume.PurchaseStatus" class="form-select" asp-items="@Model.PurchaseStatuses" onchange="purchaseStatusChanged()"></select>
                            </div>
                            <span asp-validation-for="NewVolume.PurchaseStatus" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="mb-3 row" id="release-date">
                            <label asp-for="NewVolume.ReleaseDate" class="col-sm-4 col-form-label">@Localizer["ReleaseDate"]</label>
                            <div class="col-sm-8">
                                <input asp-for="NewVolume.ReleaseDate" class="form-control" type="date"/>
                            </div>
                            <span asp-validation-for="NewVolume.ReleaseDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mb-3 row" id="purchase-date">
                    <label asp-for="NewVolume.PurchaseDate" class="col-sm-2 col-form-label">@Localizer["PurchaseDate"]</label>
                    <div class="col-sm-10">
                        <input asp-for="NewVolume.PurchaseDate" class="form-control" type="date"/>
                    </div>
                    <span asp-validation-for="NewVolume.PurchaseDate" class="text-danger"></span>
                </div>


                @*                <div class="input-group mb-3">
                <label asp-for="NewVolume.Issues" class="control-label"></label>
                <input asp-for="NewVolume.Issues" class="form-control" placeholder="Issues in volume" />
                <span asp-validation-for="NewVolume.Issues" class="text-danger"></span>
                </div>*@


                <div class="row mb-3">

                    <div class="col-sm-6">
                        <div class="row mb-3">
                            <label asp-for="NewVolume.Status" class="col-sm-4 col-form-label">@Localizer["ReadingStatus"]</label>
                            <div class="col-sm-8">
                                <select asp-for="NewVolume.Status" class="form-select" asp-items="@Model.Statuses" onchange="newReadingStatusChanged()"></select>
                            </div>
                            <span asp-validation-for="NewVolume.Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="input-group" id="new-rating-select">
                            <span class="input-group-text">@Localizer["Rating"]</span>

                            <div class="form-control">
                                @for (int i = 0; i < Model.Ratings.Count; i++)
                                {
                                    var rating = Model.Ratings[i];
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" value="@rating" asp-for="@Model.NewVolume.Rating" id="Ratings_@i">
                                        <label class="form-check-label" asp-for="@Model.NewVolume.Rating">@rating</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>






                <div class="mb-3 row">
                    <label asp-for="NewVolume.CoverFile" class="col-sm-2 col-form-label">@Localizer["Cover"]</label>
                    <div class="col-sm-10">
                        <input asp-for="NewVolume.CoverFile" type="file" class="form-control" />
                    </div>
                    <span asp-validation-for="NewVolume.CoverFile" class="text-danger"></span>
                </div>
            </div>

            <div class="modal-footer">
                <input type="reset" onclick="resetValidation()" value="@Localizer["Clear"]" class="btn btn-secondary" />
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@Localizer["Close"]</button>
                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
