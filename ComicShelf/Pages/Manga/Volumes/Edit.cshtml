@page
@model ComicShelf.Pages.Volumes.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Volume</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Volume.Id" />
            <div class="form-group">
                <label asp-for="Volume.Series.Name" class="control-label"></label>
                <input asp-for="Volume.Series.Name" class="form-control" readonly />
                <span asp-validation-for="Volume.Series.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume.Title" class="control-label"></label>
                <input asp-for="Volume.Title" class="form-control" />
                <span asp-validation-for="Volume.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Volume.Number" class="control-label"></label>
                <input asp-for="Volume.Number" class="form-control" />
                <span asp-validation-for="Volume.Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Volume.Authors" class="col-sm-2 col-form-label"></label>

                <select asp-for="SelectedAutors" class="form-control multple-datalist" multiple list="autorsOptions" placeholder="Type to search..." autocomplete="off" asp-items="@Model.Authors">
                </select>
                <span asp-validation-for="Volume.Authors" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Volume.Status" class="control-label"></label>
                <select asp-for="Volume.Status" class="form-control" asp-items="@Model.Statuses"></select>
                <span asp-validation-for="Volume.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                @foreach (var rating in Model.Ratings)
                {
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" value="@rating" asp-for="Volume.Rating">
                        <label class="form-check-label" asp-for="Volume.Rating">@rating</label>
                    </div>
                }
@*                <label asp-for="Volume.Rating" class="control-label"></label>
                <select asp-for="Volume.Rating" class="form-control" asp-items="@Model.Ratings"></select>
                <span asp-validation-for="Volume.Rating" class="text-danger"></span>
*@            </div>
            <div class="form-group">
                <label asp-for="Volume.PurchaseStatus" class="control-label"></label>
                <select asp-for="Volume.PurchaseStatus" class="form-control" asp-items="@Model.PurchaseStatuses"></select>
                <span asp-validation-for="Volume.PurchaseStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volume.PurchaseDate" class="control-label"></label>
                <input asp-for="Volume.PurchaseDate" class="form-control" />
                <span asp-validation-for="Volume.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Volume.CoverUrl" class="control-label"></label>
                <input asp-for="Volume.CoverUrl" class="form-control" />
                <span asp-validation-for="Volume.CoverUrl" class="text-danger"></span>
            </div>

            <div hidden>
                <input asp-for="Volume.CreationDate" class="form-control" readonly />
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
