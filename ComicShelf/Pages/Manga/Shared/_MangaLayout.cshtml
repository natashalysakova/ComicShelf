@using Services;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@{
    Layout = "../Shared/_Layout";
}
@inject ILocalizationService Localizer


<div class="inside-nav bg-secondary">
    <ul class="nav nav-pills nav-justified">
        <li class="nav-item">
            <a class="custom-nav-link @ViewData["IndexActive"]" asp-area="" asp-page="/Manga/Volumes/Index">
                @Localizer["VolumesPlural"]
                @{
                    var vnot = ViewData["VolumeNotification"];
                    if (!string.IsNullOrEmpty(vnot.ToString()))
                    {
                        <span class="badge rounded-pill bg-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="@vnot">!</span>
                    }
                }
            </a>
        </li>
        <li class="nav-item">
            <a class="custom-nav-link @ViewData["SeriesActive"]" asp-area="" asp-page="/Manga/Series/Index">
                @Localizer["SeriesPlural"]
                @{
                    var snot = ViewData["SeriesNotification"];
                    if (!string.IsNullOrEmpty(snot.ToString()))
                    {
                        <span class="badge rounded-pill bg-danger" data-bs-toggle="tooltip" data-bs-placement="bottom" data-bs-title="@snot">!</span>
                    }
                }
            </a>
        </li>
        
    </ul>
</div>





<div>
    @RenderBody()
</div>

@section Scripts{
    @await RenderSectionAsync("Scripts", required: false)
}


