@page
@model ComicShelf.Pages.Publishers.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Publisher</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Publisher.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Publisher.CountryName)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Publisher.CountryFlagPNG" class="flag" />
            @Html.DisplayFor(model => model.Publisher.CountryName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Publisher?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
