@page
@model ComicShelf.Pages.Publishers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Publisher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Publisher.Name" class="form-control" placeholder="Name" />
                <label asp-for="Publisher.Name" class="control-label"></label>
                <span asp-validation-for="Publisher.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <select asp-for="SelectedCountry" asp-items="@Model.CountriesList" class="form-select"></select>
                <label asp-for="Publisher.Country" class="control-label"></label>
                <span asp-validation-for="SelectedCountry" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
