@page
@using ComicShelf.Models.Enums;
@model ComicShelf.Pages.Authors.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Author</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Author.Name" class="form-control" placeholder="Name"/>
                <label asp-for="Author.Name" class="control-label"></label>
                <span asp-validation-for="Author.Name" class="text-danger"></span>
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><label asp-for="Author.Roles" class="control-label"></label></span>               
                <select asp-for="SelectedRoles" size="3" class="form-select" asp-items="@Model.PossibleRoles" multiple></select>
                <span asp-validation-for="Author.Roles" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
