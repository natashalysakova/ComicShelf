@model ComicShelf.Pages.Countries.IndexModel

@{
    ViewData["Title"] = "Countries";
}

<h1>Countries</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Countries[0].Publishers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

     @foreach (var country in Model.Countries)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => country.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => country.Flag)
                    </td>
                    <td>
                        @{
                            foreach (var publisher in country.Publishers)
                            {
                                <a asp-page="/Publishers/Details" asp-route-id="@publisher.Id">@publisher.Name</a>
                                <br />
                            }
                        }
                    </td>
@*                    <td>
                        <a asp-page="./Edit" asp-route-id="@country.Id">Edit</a> |
                        <a asp-page="./Delete" asp-route-id="@country.Id">Delete</a>
                    </td>*@
                </tr>
            }
           

@*        <form method="post">
